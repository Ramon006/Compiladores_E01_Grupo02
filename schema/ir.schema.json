{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatFlow IR Schema",
  "type": "object",
  "properties": {
    "start_state": {
      "type": "string"
    },
    "intents": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "states": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "respond": {
            "type": "string"
          },
          "on": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "intent": {
                  "type": "string"
                },
                "to": {
                  "type": "string"
                }
              },
              "required": [
                "intent",
                "to"
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "start_state",
    "states"
  ]
}